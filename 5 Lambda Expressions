interface Hello {
    void show();
}

public class HelloWorldLambda {

    public static void main(String[] args) {
        Hello h = () -> System.out.println("Hello World");
        h.show();
    }
}


------

interface Display {
    void show(String msg);
}

public class SingleParameterLambda {

    public static void main(String[] args) {
        Display d = msg -> System.out.println(msg);
        d.show("Welcome to Java");
    }
}


-------
interface Add {
    int add(int a, int b);
}

public class AddLambda {

    public static void main(String[] args) {
        Add sum = (a, b) -> a + b;
        System.out.println("The sum of 10 + 20 is: " + sum.add(10, 20));
    }
}
------


interface Temp {
    double convert(double value);
}

interface Distance {
    double convert(double value);
}

public class ConverterDemo {

    public static void main(String[] args) {

        Temp fahrenheitToCelsius = f -> (f - 32) * 5 / 9;
        System.out.println("98.6 F to C = " + fahrenheitToCelsius.convert(98.6));

        Distance kmToMiles = km -> km * 0.621371;
        System.out.println("10 km to miles = " + kmToMiles.convert(10));
    }
}

-------


interface Square {
    int calculate(int x);
}

public class ReturnLambda {

    public static void main(String[] args) {

        Square s1 = x -> x * x;
        Square s2 = x -> { 
            return x * x; 
        };

        System.out.println(s1.calculate(5));
        System.out.println(s2.calculate(5));
    }
}

